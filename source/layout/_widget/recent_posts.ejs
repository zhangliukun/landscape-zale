<% if (site.posts.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title">Recents</h3>
    <div class="widget">
      <ul>
        <% site.posts.sort('date', -1).limit(20).each(function(post){ %>
          <li>
            <a href="<%- config.root %><%- post.path %>"><%= post.title || '(no title)' %></a>(<span class="ds-thread-count" data-thread-key="<%= post.slug %>" data-count-type="comments"></span>)
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>
